<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_weather_info">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:text="Nazwa lokalizacji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_custom_name"
                android:fontFamily="serif"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:text="Nazwa miejscowości"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_location"
                android:layout_centerHorizontal="true"
                android:textStyle="normal|bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/date_measurement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/label_date"
                    android:paddingRight="10dp"
                    android:layout_centerHorizontal="true"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="11:23, 11.11.2011"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_date"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>

            <TextView
                android:text="123°C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_temperature"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif"
                android:textSize="36sp"
                android:textStyle="normal|bold" />

            <ImageView
                android:id="@+id/weatherIcon"
                app:srcCompat="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_width="@dimen/image_size_weather_info"
                android:layout_height="@dimen/image_size_weather_info"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/value_weather"
                android:text="Krótki opis pogody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:layout_alignParentEnd="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <TextView
                    android:text="@string/pressure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/label_pressure"
                    android:paddingRight="10dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="1013 hPa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_pressure" />

                <TextView
                    android:text="@string/humidity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/label_humidity"
                    android:paddingRight="10dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="100%"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_humidity" />

                <TextView
                    android:text="@string/wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/label_wind"
                    android:paddingRight="10dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="3,22 m/s (płn-wsch)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_wind" />

                <TextView
                    android:text="@string/clouds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/label_clouds"
                    android:paddingRight="10dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="23%"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_clouds" />

                <TextView
                    android:text="@string/rain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/label_rain"
                    android:paddingRight="10dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="11 mm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_rain" />

                <TextView
                    android:text="@string/snow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/label_snow"
                    android:paddingRight="10dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="0 mm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_snow" />

                <TextView
                    android:text="@string/sunrise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/label_sunrise"
                    android:paddingRight="10dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="13:20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_sunrise" />

                <TextView
                    android:text="@string/sunset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/label_sunset"
                    android:paddingRight="10dp"
                    android:textStyle="normal|bold" />

                <TextView
                    android:text="21:59"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/value_sunset" />
            </GridLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>